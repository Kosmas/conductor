<%= simple_form_for [project, ticket] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>

  <h3>Supporting Files</h3>
  <%= f.simple_fields_for :assets do |ff| %>
    <%= ff.input :asset, as: :file, label: "File ##{ff.index + 1}" %>
    <%= ff.input :asset_cache, as: :hidden %>
  <% end %>

  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
