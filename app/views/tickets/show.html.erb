<div id='ticket'>
  <div class='page-header'>
    <h1><%= @project.name %></h1>
  </div>

  <div class='page-header'>
    <h2><%= @ticket.title %></h2>

    <p id='author'>
      Created by <%= @ticket.author.email %>, <%= time_ago_in_words(@ticket.created_at) %>
    </p>

    <ul class='actions'>
      <% if policy(@ticket).update? %>
        <li>
          <%= link_to 'Edit Ticket', [:edit, @project, @ticket], class: 'edit' %>
        </li>
      <% end %>
      <% if policy(@ticket).destroy? %>
        <li>
          <%= link_to 'Delete Ticket', [@project, @ticket], method: :delete,
          data: { confirm: 'Are you sure you want to delete this ticket?' },
          class: 'delete' %>
        </li>
      <% end %>
    </ul>
  </div>

  <%= simple_format(@ticket.description) %>
  <% if @ticket.asset.present? %>
    <b4>Attached File</h4>
    <div class="asset">
      <p>
        <%= link_to File.basename(@ticket.asset.url), @ticket.asset.url %>
        (<%= number_to_human_size(@ticket.asset.size) %>)
      </p>
    </div>
  <% end %>
</div>
