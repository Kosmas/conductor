<div id='ticket'>
  <div class='page-header'>
    <h1><%= @project.name %></h1>
  </div>

  <div class='page-header'>
    <h2><%= @ticket.title %></h2>

    <p id='author'>
      Created by <%= @ticket.author.email %>, <%= time_ago_in_words(@ticket.created_at) %>
    </p>

    <ul class='actions'>
      <% if policy(@ticket).update? %>
        <li>
          <%= link_to 'Edit Ticket', [:edit, @project, @ticket], class: 'edit' %>
        </li>
      <% end %>
      <li><%= link_to 'Delete Ticket', [@project, @ticket], method: :delete,
        data: { confirm: 'Are you sure you want to delete this ticket?' },
        class: 'delete' %></li>
    </ul>
  </div>

  <%= simple_format(@ticket.description) %>
</div>



<% if false %>

<div id="ticket">
  <h2><%= @ticket.title %></h2>
  <span id='author'>Created by <%= @ticket.user.email %></span>

  <% authorized?('edit tickets'.to_sym, @project) do %>
    <%= link_to 'Edit Ticket', [:edit, @project, @ticket] %>
  <% end %>
  <% authorized?('delete tickets', @project) do %>
    <%= link_to 'Delete Ticket', [@project, @ticket], method: :delete, data: { confirm: 'Are you sure you want to delete this ticket?' } %>
  <% end %>

  <%= simple_format(@ticket.description) %>

  <% if @ticket.assets.present? %>
    <h3>Attached Files</h3>
    <div class='assets'>
      <% @ticket.assets.each do |asset| %>
        <p>
          <%= link_to File.basename(asset.asset.path), file_path(asset) %>
        </p>
        <p>
          <small><%= number_to_human_size(asset.asset.size) %></small>
        </p>
      <% end %>
    </div>
  <% end %>
</div>

<h3>Comments</h3>
<div id='comments'>
  <% if @ticket.comments.exists? %>
    <%= render @ticket.comments.select(&:persisted?) %>
  <% else %>
    There are no comments for this ticket.
  <% end %>
</div>
<%= render 'comments/form' %>

<% end %>